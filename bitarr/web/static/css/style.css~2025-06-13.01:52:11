/* Responsive Table */
@media (max-width: 768px) {
    table, thead, tbody, th, td, tr {
        display: block;
    }

    thead tr {
        position: absolute;
        top: -9999px;
        left: -9999px;
    }

    tr {
        border: 1px solid var(--border-color);
        margin-bottom: 10px;
        border-radius: var(--border-radius);
    }

    td {
        border: none;
        border-bottom: 1px solid var(--border-color);
        position: relative;
        padding-left: 50%;
    }

    td:before {
        position: absolute;
        top: 10px;
        left: 10px;
        width: 45%;
        white-space: nowrap;
        font-weight: 500;
    }

    td:nth-of-type(1):before { content: "Status"; }
    td:nth-of-type(2):before { content: "Date & Time"; }
    td:nth-of-type(3):before { content: "Path"; }
    td:nth-of-type(4):before { content: "Files"; }
    td:nth-of-type(5):before { content: "Size"; }
    td:nth-of-type(6):before { content: "Summary"; }

    tr:last-child td:last-child {
        border-bottom: none;
    }
}

